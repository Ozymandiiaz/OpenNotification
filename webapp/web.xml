<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">
<web-app>
	<display-name>Reliable Response</display-name>
    <filter>
        <filter-name>Access Control Filter</filter-name>
        <filter-class>net.reliableresponse.notification.web.filters.AuthenticationFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>Access Control Filter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter>
        <filter-name>SOAP Access Control Filter</filter-name>
        <filter-class>net.reliableresponse.notification.web.filters.SOAPFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>SOAP Access Control Filter</filter-name>
        <url-pattern>/*jws</url-pattern>
    </filter-mapping>

	<servlet>
		<servlet-name>InitializationServlet</servlet-name>
		<servlet-class>net.reliableresponse.notification.web.servlets.InitializationServlet</servlet-class>
		<load-on-startup>20</load-on-startup>
	</servlet>
	<servlet>
		<servlet-name>ManagePendingUsersServlet</servlet-name>
		<servlet-class>net.reliableresponse.notification.web.servlets.ManagePendingUsersServlet</servlet-class>
		<load-on-startup>10</load-on-startup>
	</servlet>
	<servlet>
		<servlet-name>SendNotificationServlet</servlet-name>
		<servlet-class>net.reliableresponse.notification.web.servlets.SendNotificationServlet</servlet-class>
		<load-on-startup>10</load-on-startup>
	</servlet>
	<servlet>
		<servlet-name>ConfirmNotificationServlet</servlet-name>
		<servlet-class>net.reliableresponse.notification.web.servlets.ConfirmNotificationServlet</servlet-class>
		<load-on-startup>10</load-on-startup>
	</servlet>
	<servlet>
		<servlet-name>AuthenticationServlet</servlet-name>
		<servlet-class>net.reliableresponse.notification.web.servlets.AuthenticationServlet</servlet-class>
		<load-on-startup>10</load-on-startup>
	</servlet>
	<servlet>
		<servlet-name>UpdateUserInfoServlet</servlet-name>
		<servlet-class>net.reliableresponse.notification.web.servlets.UpdateUserInfoServlet</servlet-class>
		<load-on-startup>10</load-on-startup>
	</servlet>
	<servlet>
		<servlet-name>UpdateGroupInfoServlet</servlet-name>
		<servlet-class>net.reliableresponse.notification.web.servlets.UpdateGroupInfoServlet</servlet-class>
		<load-on-startup>10</load-on-startup>
	</servlet>
	<servlet>
		<servlet-name>SearchMembersServlet</servlet-name>
		<servlet-class>net.reliableresponse.notification.web.servlets.SearchMembersServlet</servlet-class>
		<load-on-startup>10</load-on-startup>
	</servlet>
	<servlet>
		<servlet-name>AddUserServlet</servlet-name>
		<servlet-class>net.reliableresponse.notification.web.servlets.AddUserServlet</servlet-class>
		<load-on-startup>10</load-on-startup>
	</servlet>
	<servlet>
		<servlet-name>AddGroupServlet</servlet-name>
		<servlet-class>net.reliableresponse.notification.web.servlets.AddGroupServlet</servlet-class>
		<load-on-startup>10</load-on-startup>
	</servlet>
	<servlet>
		<servlet-name>EditDeviceServlet</servlet-name>
		<servlet-class>net.reliableresponse.notification.web.servlets.EditDeviceServlet</servlet-class>
		<load-on-startup>10</load-on-startup>
	</servlet>
	<servlet>
    	<servlet-name>AxisServlet</servlet-name>
    	<display-name>Apache-Axis Servlet</display-name>
    	<servlet-class>
    	    org.apache.axis.transport.http.AxisServlet
    	</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>LogoutServlet</servlet-name>
		<servlet-class>net.reliableresponse.notification.web.servlets.LogoutServlet</servlet-class>
		<load-on-startup>10</load-on-startup>
	</servlet>
	<servlet>
		<servlet-name>ActionServlet</servlet-name>
		<servlet-class>net.reliableresponse.notification.web.servlets.ActionServlet</servlet-class>
		<load-on-startup>10</load-on-startup>
	</servlet>
	<servlet>
		<servlet-name>ForgotPasswordServlet</servlet-name>
		<servlet-class>net.reliableresponse.notification.web.servlets.ForgotPasswordServlet</servlet-class>
		<load-on-startup>10</load-on-startup>
	</servlet>
	<servlet>
		<servlet-name>IPNServlet</servlet-name>
        <servlet-class>net.reliableresponse.notification.web.servlets.IPNServlet</servlet-class>
        <load-on-startup>10</load-on-startup>
    </servlet>
    <servlet>
    	<servlet-name>AttachmentServlet</servlet-name>
        <servlet-class>net.reliableresponse.notification.web.servlets.AttachmentServlet</servlet-class>
        <load-on-startup>10</load-on-startup>
    </servlet>
    <servlet>
    	<servlet-name>RestServlet</servlet-name>
        <servlet-class>net.reliableresponse.notification.web.servlets.RestServlet</servlet-class>
        <load-on-startup>10</load-on-startup>
    </servlet>

	<servlet-mapping>
		<servlet-name>jsp</servlet-name>
		<url-pattern>*.wml</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>ManagePendingUsersServlet</servlet-name>
		<url-pattern>/ManagePendingUsers</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>SendNotificationServlet</servlet-name>
		<url-pattern>/SendNotification</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>SendNotificationServlet</servlet-name>
		<url-pattern>/sendNotification/SendNotification</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>ManagePendingUsersServlet</servlet-name>
		<url-pattern>/sendNotification/ManagePendingUsers</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>ConfirmNotificationServlet</servlet-name>
		<url-pattern>/ConfirmNotification</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>ConfirmNotificationServlet</servlet-name>
		<url-pattern>/confirmNotification/ConfirmNotification</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>UpdateUserInfoServlet</servlet-name>
		<url-pattern>/UpdateUserInfo</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>UpdateUserInfoServlet</servlet-name>
		<url-pattern>/usermgmt/UpdateUserInfo</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>UpdateGroupInfoServlet</servlet-name>
		<url-pattern>/UpdateGroupInfo</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>UpdateGroupInfoServlet</servlet-name>
		<url-pattern>/groupmgmt/UpdateGroupInfo</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>AuthenticationServlet</servlet-name>
		<url-pattern>/AuthenticationServlet</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>LogoutServlet</servlet-name>
		<url-pattern>/LogoutServlet</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>SearchMembersServlet</servlet-name>
		<url-pattern>/SearchMembers</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>SearchMembersServlet</servlet-name>
		<url-pattern>/usermgmt/SearchMembers</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>AddUserServlet</servlet-name>
		<url-pattern>/addUser/AddUser</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>AddUserServlet</servlet-name>
		<url-pattern>/AddUser</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>AddGroupServlet</servlet-name>
		<url-pattern>/addGroup/AddGroup</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>AddGroupServlet</servlet-name>
		<url-pattern>/AddGroup</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>EditDeviceServlet</servlet-name>
		<url-pattern>/editDevice/EditDevice</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>EditDeviceServlet</servlet-name>
		<url-pattern>/EditDevice</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>ActionServlet</servlet-name>
		<url-pattern>/ActionServlet</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>ForgotPasswordServlet</servlet-name>
		<url-pattern>/ForgotPasswordServlet</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
    	<servlet-name>IPNServlet</servlet-name>
        <url-pattern>/IPNServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
    	<servlet-name>AttachmentServlet</servlet-name>
        <url-pattern>/AttachmentServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
    	<servlet-name>RestServlet</servlet-name>
        <url-pattern>/rest/*</url-pattern>
    </servlet-mapping>

	<servlet-mapping>
    	<servlet-name>AxisServlet</servlet-name>
    	<url-pattern>*.jws</url-pattern>
	</servlet-mapping>
	
	<mime-mapping>
        <!-- WML Source -->
        <extension>wml</extension>
        <mime-type>text/vnd.wap.wml</mime-type>
    </mime-mapping>
	
	
	<welcome-file-list>
		<welcome-file>default.jsp</welcome-file>
		<welcome-file>index.html</welcome-file>
		<welcome-file>index.htm</welcome-file>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
</web-app>
